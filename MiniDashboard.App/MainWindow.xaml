<Window x:Class="MiniDashboard.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MiniDashboard.App.Views"
        xmlns:vm="clr-namespace:MiniDashboard.App.ViewModels"
        Title="MiniDashboard" Height="600" Width="800">
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTab}">
            <TabItem Header="Books">
                <!-- This UserControl's DataContext is bound to MainViewModel.Books -->
                <views:BooksView DataContext="{Binding Books}" />
            </TabItem>

            <TabItem Header="Authors">
                <!-- This UserControl's DataContext is bound to MainViewModel.Authors -->
                <views:AuthorsView DataContext="{Binding Authors}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>